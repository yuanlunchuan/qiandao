body{
  background-color: #ececec;
}
.title-name{
  color: #005BAC;
  font-size: 1.4em;
  padding-left: 30px;
}
.sign-number-area{
  margin-top: 20px;
}
.sign-number-area span{
  color: #005BAC;
  font-size: 1.6em;
}
.select-area{
  margin-top: 20px;
}
.select-box-area{
  padding-right: 0px;
}
.select-area input{
  width: 100%;
  border-radius: 5px;
  border: #2F78B8 1px solid;
  height: 40px;
  line-height: 40px;
}
.select-area button{
  background-color: #005BAC;
  color: #fff;
  height: 40px;
  border-radius: 5px;
  border: 0px;
  width: 100%;
}
.sign-content{
  padding-left: 30px;
  padding-right: 30px;
}
.sign-area{
  margin-top: 30px;
  border: #005BAC 1px solid;
  background-color: #fff;
  border-radius: 15px;
  padding: 0px;
  overflow: hidden;
}
.sign-area div{
  color: #005BAC;
  font-size: 1.2em;
  height: 30px;
  line-height: 30px;
  cursor: pointer;
}
.sign-area div.sign-active{
  background-color: #005BAC;
  color: #fff;
}
.table-area{
  padding-left: 30px;
  padding-right: 30px;
}
table{
  width:100%;
  text-align: center;
  vertical-align: middle;
  color: #005BAC;
}
tr{
  height: 40px;
  line-height: 40px;
}
th{
  text-align: center;
  vertical-align: middle;
}
td{
  font-size: 0.9em;
}
.phone-button{
  height: 40px;
  line-height: 40px;
  cursor: pointer;
}
.phone-button a{
  color: #005BAC;
}
.phone-button a:hover{
  text-decoration: none;
}
.phone-button span{
  background: url(<%= image_path 'client/recommends/map_bg.png' %>) center no-repeat;
}
.bg-cell{
  background-color: #e5e5e5;
}
.no-sign{
  color: #DC143C;
}