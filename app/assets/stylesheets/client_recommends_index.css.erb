body{
  background-color: #ececec;
  font-family:'黑体', '微软雅黑';
}
.recommends-img{
  padding: 0px;
}
.title-area{
  height: 70px;
  line-height: 70px;
  padding: 0px;
}
.icon-area img{
  width: 30px;
  height: 40px;
}
.title-name{
  font-size: 1.2em;
  color: #005bac;
  margin-left: 4px;
}
.close-area {
  cursor: pointer;
}
.close-area img{
  width: 30px;
  height: 30px;
}
.table-area{
  padding-left: 30px;
  padding-right: 30px;
}
table{
  width: 100%;
}
tr{
  border-bottom: #c9c9c9 1px solid;
  height: 30px;
}
th{
  color: #005BAC;
}
.classification{
  width: 12%;
}
.shop-name{
  width: 28%;
  text-align: center;
}
.shop-address{
  width: 38%;
  text-align: center;
}
.map-navigator{
  width: 22%;
  text-align: right;
}
td.classification span{
  background-color: #25A1E8;
  color: #fff;
  border-radius: 4px;
  display: inline-block;
  width: 36px;
  margin-left: -4px;
  padding-left: 4px;
}
td.classification{
  font-size: 0.9em;
}
td.shop-name{
  font-size: 0.9em;
  color: #2F78B8;
  text-align: left;
}
td.shop-address{
  font-size: 0.9em;
  color: #494949;
  text-align: left;
}
td.map-navigator{
  font-size: 0.9em;
  color: #367CBA;
}
td.map-navigator span{
  width: 60px;
  background: url(<%= image_path 'client/recommends/map_bg.png' %>) center no-repeat;
  display: inline-block;
  padding-right: 4px;
  height: 24px;
  line-height: 24px;
}
.bg-cell{
  background-color: #e5e5e5;
}
.no-boder{
  border-bottom: 0px;
}