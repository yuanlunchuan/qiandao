<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>公司信息</h5>
      </div>
      <div class="ibox-content">
        <%= form_for @company, html: {class: 'form-horizontal'} do |f|%>

          <div class="form-group"><label class="col-sm-2 control-label">公司名称</label>
            <div class="col-sm-5"> <%=f.text_field :name, class: 'form-control'%> </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">公司地址</label>
            <div class="col-sm-5"> <%=f.text_field :address, class: 'form-control'%> </div>
          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <%= button_tag '保存', class: 'btn btn-primary'%>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
