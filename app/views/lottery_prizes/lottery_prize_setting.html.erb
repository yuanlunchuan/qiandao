<% breadcrumb :lottery_prizes_list_item %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>奖项设置</h5>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <td>#</td>
              <td>奖项名称</td>
              <td>数量</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>golden</td>
              <td>100</td>
            </tr>
            <tr>
              <td>1</td>
              <td>golden</td>
              <td>100</td>
            </tr>
            <tr>
              <td>1</td>
              <td>golden</td>
              <td>100</td>
            </tr>
          </tbody>
        </table>
      </div>

      <%= form_tag("/app/events/#{current_event.id}/lottery_prizes", method: "post") do %>
        <div class="ibox-content hidden">
          <table class="table table-striped" id="option">
  					<tr id="option1">
  						<td class="col-xs-1">奖项</td>
  						<td class="col-xs-2">
  						  <input type="text" name="lottery[lottery_name][]" placeholder="输入奖项名称"></input>
  						</td>
  						<td class="col-xs-1">
  						  <input type="number" name="lottery[lottery_acount][]" placeholder="数量"></input>
  						</td>
  					</tr>
  				</table>

  				<div style="margin-top:10px">
  					<input id="add" type="button" onclick="addRow()" value="+增加奖项"></input>
  				</div>

  				<div class="row" style="margin-top:10px">
  					<input class="col-xs-1" style="margin-right:10px" type="submit" value="确定"></input>
  					<input class="col-xs-2" type="button" value="取消修改"></input>
  				</div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
	function addRow(){
	  var newRow="<tr><td class=\"col-xs-1\">奖项</td><td class=\"col-xs-2\"><input name='lottery[lottery_name][]' type=\"text\" placeholder=\"输入奖项名称\"></input></td><td class=\"col-xs-1\"><input name='lottery[lottery_acount][]' type=\"text\" placeholder=\"数量\"></input></td></tr>";
		$("#option").append(newRow);
	}
</script>
