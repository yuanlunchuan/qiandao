<% breadcrumb :notifications_edit_sms_template %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>编辑短信模板</h5>
      </div>
      <div class="ibox-content">

        <%= form_for @template, url: event_notifications_update_sms_template_path, html: {class: 'form-horizontal'} do |f|%>

          <div class="form-group"><label class="col-sm-2 control-label">模板</label>
            <div class="col-sm-5"> <%=f.text_area :content, rows: 5, class: 'form-control'%> </div>
          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <%=link_to '取消', event_notifications_path(current_event), class: 'btn btn-white'%>
              <%= button_tag '保存', class: 'btn btn-primary'%>
            </div>
          </div>

        <% end %>


      </div>
    </div>
  </div>
</div>