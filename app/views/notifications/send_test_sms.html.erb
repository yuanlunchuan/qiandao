<% breadcrumb :notifications_send_test_sms %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>发送测试短信</h5>
      </div>
      <div class="ibox-content">

        <%= form_tag event_notifications_send_test_sms_path, class: 'form-horizontal' do |f|%>

          <div class="form-group"><label class="col-sm-2 control-label">模板</label>
            <div class="col-sm-5"> <%=text_area_tag :template, @template.content, rows: 5, class: 'form-control', readonly: true%> </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">手机号码</label>
            <div class="col-sm-3"> <%=text_field_tag :mobile, '', class: 'form-control'%> </div>
          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <%=link_to '取消', event_notifications_path(current_event), class: 'btn btn-white'%>
              <%= button_tag '发送', class: 'btn btn-primary'%>
            </div>
          </div>

        <% end %>


      </div>
    </div>
  </div>
</div>