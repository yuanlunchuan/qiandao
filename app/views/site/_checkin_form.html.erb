<div class="row">
  <div class="col-lg-5">
    <%= image_tag 'scanner.png', width: '100%' %>

    <input type="text" class="form-control input-sm scanner-input"
           data-url="<%=event_site_check_in_path%>"
           data-attendees-url="<%=event_site_attendees_path%>">

  </div>

  <div class="col-lg-7">
    <h2>如无法扫码，请人工输入信息查询</h2>

    <div class="row">
      <div class="col-lg-12 m-t-md">
        <div class="form-group">
          <input type="text" id="key_word_input_box" placeholder="输入姓名、公司、电话等信息" class="form-control input-lg site-keyword-input" data-url="<%=event_site_search_path%>">
        </div>

        <div class="form-group m-t-lg">
          <button class="btn btn-primary btn-block input-lg site-search-btn">查询</button>
        </div>

      </div>
    </div>
  </div>
</div>
