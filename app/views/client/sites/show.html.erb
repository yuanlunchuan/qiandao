              <input type="file" id="pic-portrait" name="file" />
            </form>
          </div>

          <div class="col-xs-8 portrait-msg">
            <span class="user-name"><%= @attendee.name %></span>
            <span class="user-company"><%= @attendee.company.present? ? @attendee.company : '公司未知' %></span>
