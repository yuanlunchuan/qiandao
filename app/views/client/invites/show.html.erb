<div id="event-id" class="hidden" data-event-id=<%= current_event.id %>></div>

<title>尤尼克斯新品发布合作伙伴会议</title>
<div class="container">
  <div class="row">
    <div class="load-area text-center">
      <%= image_tag 'client/sites/loading.gif' %>
      <p class="text-color1">正在加载中</p>
    </div>
    <div id="page0" class="col-xs-12 animated">
      <div class="home-bg">
        <%= image_tag '', class:"bg-img" %>
      </div>
      <div class="col-xs-12 logo-area">
        <div class="col-xs-12 text-right">
          <%= image_tag '', class:""%>
        </div>
      </div>
      <div class="col-xs-12 title-area">
        <div class="set-title hidden">
          <p class="name-title"></p>
          <p class="title-main"></p>
          <p class="title-spare"></p>
        </div>
        <p class="invitation"></p>
      </div>
      <div class="col-xs-12 text-center double-down">
        <%= image_tag 'client/invites/arrow.png'%>
      </div>
    </div>
    <div id="page1" class="col-xs-12 animated fadeInUp">
      <div class="home-bg">
        <%= image_tag 'client/invites/home_page1.png', class:"bg-img" %>
      </div>
      <div class="page1-area">
        <div class="col-xs-12 logo-area">
          <div class="col-xs-12 text-right">
            <%= image_tag ''%>
          </div>
        </div>
        <div class="col-xs-12 title-area">
          <div class="set-title hidden title-text">
            <p class="name-title"></p>
            <p class="title-main"></p>
            <p class="title-spare"></p>
          </div>
        </div>
        <div class="col-xs-12 letter-area">
          <div class="col-xs-10 col-xs-offset-1">
            <p class="call-name"></p>
            <p class="letter-pre"></p>
          </div>
        </div>
        <div class="col-xs-12 button-area text-center">
          <%= link_to new_client_event_session_path(current_event) do %>
            <button type="button">获取入场凭证</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :style do %>
  <%= stylesheet_link_tag '//cdn.bootcss.com/animate.css/3.5.0/animate.min.css', media: 'all' %>
  <%= stylesheet_link_tag 'client_invites_show', media: 'all' %>
<% end %>

<% content_for :script do %>
  <%= javascript_include_tag 'client_invites_show' %>
<% end %>
