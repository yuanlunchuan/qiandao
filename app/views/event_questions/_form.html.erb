<%= form_for [current_event, @event_question], html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <label class="form-label col-md-2">问题环节标题</label>
    <div class="col-md-3">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= link_to '取消', event_event_questions_path(current_event), class: 'btn btn-white' %>
      <%= button_tag '保存', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
