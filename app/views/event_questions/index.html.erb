<% breadcrumb :event_questions %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>提问环节管理</h5>
      </div>
      <div class="ibox-content">

        <div class="row">
          <div class="col-sm-12">
            <%= link_to '创建提问环节', new_event_event_question_path(current_event), class: 'btn btn-white btn-sm pull-right' %>
          </div>
        </div>
        <div class="row">
          <table class="table table-hover">
            <tr>
              <td>#</td>
              <td>提问环节</td>
              <td>操作</td>
            </tr>
            <tbody>
              <% @event_questions.each do |event_question|%>
                <tr>
                  <td><%= event_question.id %></td>
                  <td><%= link_to event_question.name,event_event_question_path(current_event, event_question) %>
                  </td>
                  <td>
                    <%= link_to '修改', edit_event_event_question_path(current_event, event_question) %>/
                    <%= link_to '删除', event_event_question_path(current_event, event_question), method: :delete, data: { confirm: '你确定删除吗？' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>