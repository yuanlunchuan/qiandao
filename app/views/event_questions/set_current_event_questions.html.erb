<% breadcrumb :set_current_event_question %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>设置当前提问环节</h5>
      </div>
      <div class="ibox-content">
        <%= form_tag(event_update_current_event_questions_path(current_event), method: 'POST', class: 'form-horizontal') do %>
          <% @event_questions.each do |event_question|%>
            <div class="radio">
              <label>
                <input type="radio" name="current_event_question" value="<%=event_question.id %>" <%=event_question.active ? 'checked' : ''%>>&nbsp;&nbsp;&nbsp;&nbsp;<%= event_question.name %>
              </label>
            </div>
          <% end %>
          <div class="form-group">
            <div class="col-md-4 col-md-offset-2">
              <% if @event_questions.size==0 %>
                <%= button_tag '保存', class: 'btn btn-primary hidden' %>
              <% else %>
                <%= button_tag '保存', class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
