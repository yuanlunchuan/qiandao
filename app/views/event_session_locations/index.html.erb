<% breadcrumb :locations %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>会议场地管理</h5>
      </div>
      <div class="ibox-content">
        <div class="project-list">
          <div class="row">
            <div class="col-sm-12">
              <%= link_to '新增场地', new_event_event_session_location_path(current_event), class: 'btn btn-white btn-sm pull-right' %>
            </div>
          </div>
          <div class="row">
          <table class="table table-hover">
            <tbody>

            <% @session_locations.each do |location| %>
            <tr>
              <td class="session-date">
                <%= location.id %>
              </td>
              <td class="session-name"><%= location.location_name %> </td>

              <td class="project-actions">
                <%= link_to edit_event_event_session_location_path(current_event, location), class: 'btn btn-white btn-sm' do%>
                <i class="fa fa-pencil"></i> 编辑会议场地信息
                <% end %>
              </td>
            </tr>
            <% end %>

            </tbody>
          </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>