<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name"></h1>
    </div>
    <h3>YONEX 会议活动管理系统</h3>
    <p>登陆进入您的账户</p>

    <%= form_tag sign_in_path, class: 'm-t', role: 'form' do%>
      <div class="form-group">
        <input type="text" name="name" class="form-control" placeholder="用户名" required="" autocomplete="false">
      </div>
      <div class="form-group">
        <input type="password" name='password' class="form-control" placeholder="密码" required="">
      </div>
      <input type="hidden" name="back_url" value="<%=params[:back_url]%>">
      <button type="submit" class="btn btn-primary block full-width m-b">登录</button>
      <%= link_to '#' do %>
        <small>忘记密码</small>
      <% end %>
    <% end %>
    <p class="m-t"> <small>Yonex &copy; 2015</small> </p>
  </div>
</div>




