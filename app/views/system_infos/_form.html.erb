<%= form_for [current_event, @system_info], html: {class: 'form-horizontal'} do |f|%>

  <div class="form-group">
    <label class="col-sm-2 control-label">内容</label>
    <div class="col-sm-3">
      <%=f.text_field :content, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">显示</label>
    <div class="col-sm-4">
      <%= f.check_box :display, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%=link_to '取消', event_system_infos_path(current_event), class: 'btn btn-white'%>
      <%= button_tag '保存', class: 'btn btn-primary'%>
    </div>
  </div>

<% end %>
