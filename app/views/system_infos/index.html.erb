<% breadcrumb :system_infos %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>系统消息管理</h5>
      </div>
      <div class="ibox-content">
        <div class="project-list">

          <div class="row">
            <div class="col-sm-12">
              <%= link_to '发布系统消息', new_event_system_info_path, class: 'btn btn-white btn-sm pull-right' %>
            </div>
          </div>

          <div class="row">

          <table class="table table-hover">
            <tbody>

            <% @system_infos.each do |system_info| %>
            <tr>
              <td class="session-date">
                <%= system_info.content %>
              </td>
              <td class="session-name">
                <%= system_info.display ? '显示' : '隐藏' %>
              </td>

              <td class="project-actions">
                <%= link_to edit_event_system_info_path(current_event, system_info), class: 'btn btn-white btn-sm' do%>
                <i class="fa fa-pencil"></i> 修改
                <% end %>

                <%= link_to event_system_info_path(current_event, system_info), method: :delete, data: {confirm: '是否确认删除？'}, class: 'btn btn-white btn-sm' do %>
                  <i class="fa fa-trash"></i> 删除
                <% end %>
              </td>
            </tr>
            <% end %>

            </tbody>
          </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>