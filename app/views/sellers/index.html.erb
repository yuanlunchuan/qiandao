<% breadcrumb :sellers %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>销售列表</h5>
      </div>
      <div class="ibox-content">
        <div class="project-list">

          <div class="row">
            <div class="col-sm-12">
              <%= link_to '新增销售', new_event_seller_path, class: 'btn btn-white btn-sm pull-right' %>
            </div>
          </div>

          <div class="row">

          <table class="table table-hover">
            <thead>
            <tr>
              <th>姓名</th>
              <th>负责区域</th>
              <th>电话号码</th>
              <th>对接人</th>
              <th></th>
            </tr>
            </thead>

            <tbody>
            <% @sellers.each do |seller| %>
            <tr>
              <td>
                <%= seller.name %>
              </td>
              <td>
                <%= seller.responsible_area %>
              </td>
              <td>
                <%= seller.phone_number %>
              </td>
              <% if seller.manager.present? %>
                <td><%= seller.manager.name %></td>
              <% else %>
                <td>无</td>
              <% end %>
              <td class="text-center">
                <%= link_to edit_event_seller_path(current_event, seller), class: 'btn btn-white btn-sm' do%>
                <i class="fa fa-pencil"></i> 修改
                <% end %>

                <%= link_to event_seller_path(current_event, seller), method: :delete, data: {confirm: '是否确认删除？'}, class: 'btn btn-white btn-sm' do %>
                  <i class="fa fa-trash"></i> 删除
                <% end %>
              </td>
            </tr>
            <% end %>

            </tbody>
          </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>