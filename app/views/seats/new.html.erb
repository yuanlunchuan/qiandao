<% breadcrumb :seats_new %>

<% if params[:session_id].blank? %>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>选择需要安排座位的日程</h5>
        </div>

        <div class="ibox-content">
          <%=select_tag :session_id, options_for_select(current_event.sessions.map {|s| [s.full_name, new_event_seat_path(current_event, { session_id: s.id })]}, url_for), prompt: '请选择日程', include_blank: false, class: 'input-sm form-control input-s-sm inline', id: 'select-session-checkin'%>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>报名用户列表</h5>
        </div>

        <%= form_tag event_seats_path(current_event) do%>
          <div class="row">
            <input type="text" name='session_id' value=<%= params[:session_id] %> class="hidden" />
            <span>请选择安排坐位要求</span>
            <br />
            <input type="radio" name="classify" value="location" checked="true" /> 按照所在地（省市） 
            <input type="radio" name="classify" value="seller" /> 对接销售等条件筛选嘉宾列表
            <br />
            <span>是否允许不是同一个分类的坐一桌</span>
            <br />

            <input type="radio" name="enable_together" value="no" checked="true" /> 不允许
            <input type="radio" name="enable_together" value="yes" /> 允许
            <br />
            <input type="tetx" name="table_num" placeholder="请输入桌数" value=<%= @session.try(:seat).try(:table_num) %> />---
            <input type="tetx" name="table_pernum" placeholder="请输入没桌坐的的人数"  value=<%= @session.try(:seat).try(:per_table_num) %> />
            <div class="input-group">
              <span class="input-group-btn"><button type="submit" class="btn btn-sm btn-primary"> 开始安排座位</button> </span>
            </div>
          </div>
        <% end %>

        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>序号</th>
                <th>姓名</th>
                <th>性别</th>
                <th>报名时间</th>
                <th>省</th>
                <th>市</th>
                <th>公司</th>
                <th>手机号码</th>
                <th>标签</th>
                <th class="text-center">照片</th>
                <th class="text-center">头像</th>
                <th>管理</th>
              </tr>
              </thead>
              <tbody>
              <% @attendees.each do |attendee| %>
                <tr>
                  <td><%=attendee.attendee_number%></td>
                  <td><%=attendee.name%></td>
                  <td><%=attendee.gender%></td>
                  <td><%=attendee.created_at%></td>
                  <td><%=attendee.province%></td>
                  <td><%=attendee.city%></td>
                  <td><%=attendee.company%></td>
                  <td><%=attendee.mobile%></td>
                  <td><%=attendee.category.try(:name)%></td>
                  <td class="text-center">
                    <% if attendee.photo.exists? %>
                      <%= link_to attendee.photo.url, target: '_blank' do%> <i class="fa fa-picture-o text-success"></i> <% end %>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <% if attendee.avatar.exists? %>
                      <%= link_to attendee.avatar.url, target: '_blank', class:'btn btn-normal btn-xs' do%>
                        <i class="fa fa-smile-o text-success"></i>
                      <% end %>
                    <% elsif attendee.photo.exists? %>
                      <%= link_to avatar_event_attendee_path(current_event, attendee, back_url: request.original_url ), class:'btn btn-xs btn-outline btn-normal' do %>
                        <i class="fa fa-frown-o text-danger"></i>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <%=link_to '查看', event_attendee_path(current_event, attendee), class: 'btn btn-white btn-xs' %>
                    <%=link_to '编辑', edit_event_attendee_path(current_event, attendee), class: 'btn btn-white btn-xs' %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>

          </div>

          <div class="row">
            <div class="col-sm-12">
              <%= paginate @attendees %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>
