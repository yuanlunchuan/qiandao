<div class="ibox-content">
  <div class="container-fluid">
    <div class="col-sm-12 m-b-xs">
      <%= link_to '按座位查看', event_seats_path(current_event, display_type: 'seat', session_id: params[:session_id]), class: "btn btn-primary" %>
      <%= link_to '按名单查看', event_seats_path(current_event, display_type: 'attendee', session_id: params[:session_id]), class: 'btn btn-primary' %>
    </div>
    <div class="row">
      <% for i in 1..@current_session_seat.total_table_count%>
        <div class="col-sm-6">
          <div class="col-sm-3">第<%= i %>桌（排）</div>
          <div class="col-sm-3 col-sm-offset-6"><%= link_to '编辑', new_event_seat_path(current_event, current_action: 'show_attendees', session_id: params[:session_id], table_row: i) , class: 'btn btn-default' %></div>
          <table style="border:1px solid #999" class="table table-striped table-hover">
            <% col = 0 %>
            <% @session.seats.seat_by_row(i).each do |seat| %>
              <% col += 1 %>
              <% attendee = seat.attendee %>
              <tr><td><%= col %></td><td><%= attendee.name %></td><td><%= attendee.company %></td></tr>
            <% end %>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
