<div class="ibox-content">
  <div class="container-fluid">
    <div class="row">
      <% for i in 1..@current_session_seat.total_table_count%>
        <div class="col-sm-6">
          <div class="col-sm-3">第<%= i %>桌（排）</div>
          <div class="col-sm-3 col-sm-offset-6"><%= link_to '编辑', '', class: 'btn btn-default' %></div>
          <table class="table table-striped table-hover">
            <% col = 0 %>
            <% @session.seats.seat_by_row(i).each do |seat| %>
              <% col += 1 %>
              <% attendee = Attendee.find(seat.attendee.id) %>
              <tr><td><%= col %></td><td><%= attendee.name %></td><td><%= attendee.company %></td></tr>
            <% end %>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
