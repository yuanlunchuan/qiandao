<% breadcrumb :questions %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>提问审核</h5>
      </div>
      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>序号</th>
              <th>用户</th>
              <th>问题</th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody>
              <% i = 0 %>
              <% @questions.each do |question| %>
              <tr>
                <td><%= i+= 1 %></td>
                <td><%= question.attendee.name %></td>
                <td><%= question.question_content %></td>
                <% if question.answer.present? %>
                  <td><%= link_to '查看', event_question_path(current_event, question.id) %></td>
                <% else %>
                  <td><%= link_to '查看并回复', event_question_path(current_event, question.id) %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>