<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>活动信息设置</h5>
      </div>
      <div class="ibox-content">

        <%= form_for current_event, url: event_save_settings_path(current_event), html: {class: 'form-horizontal'} do |f|%>

          <div class="form-group"><label class="col-sm-2 control-label">活动名称</label>
            <div class="col-sm-3"> <%=f.text_field :name, class: 'form-control'%> </div>
          </div>

          <div class="input-daterange-group">
            
          <div class="form-group"><label class="col-sm-2 control-label">开始时间</label>
            <div class="col-sm-3">
              <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span> <%= f.text_field :start, class: 'form-control actual_range'%>
              </div>
            </div>

            <div class="col-sm-2">
              <div class="input-group clockpicker">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                </span>
                <%= f.text_field :start_time, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">结束时间</label>
            <div class="col-sm-3">
              <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span> <%= f.text_field :end, class: 'form-control actual_range'%>
              </div>
            </div>

            <div class="col-sm-2">
              <div class="input-group clockpicker">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                </span>
                <%= f.text_field :end_time, class: 'form-control' %>
              </div>
            </div>

          </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">时区设置</label>
            <div class="col-sm-5">
              <%= f.time_zone_select :time_zone, nil, {default: 'Beijing', include_blank: false}, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">活动地址</label>
            <div class="col-sm-5"> <%=f.text_field :location, class: 'form-control'%> </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">活动网站</label>
            <div class="col-sm-5"> <%=f.url_field :event_link, class: 'form-control'%> </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">活动描述</label>
            <div class="col-sm-5"> <%=f.text_area :desc, rows: 5, class: 'form-control'%> </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">联系人</label>
            <div class="col-sm-3"> <%=f.text_field :contact, class: 'form-control'%> </div>
          </div>

          <div class="form-group"><label class="col-sm-2 control-label">联系电话</label>
            <div class="col-sm-3"> <%=f.text_field :contact_number, class: 'form-control'%> </div>
          </div>

          <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
              <%=link_to '取消', event_dashboard_path(current_event), class: 'btn btn-white'%>
              <%= button_tag '保存', class: 'btn btn-primary'%>
            </div>
          </div>


        <% end %>

      </div>
    </div>
  </div>
</div>