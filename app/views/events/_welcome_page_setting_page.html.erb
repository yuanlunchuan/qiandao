<%= form_for @event, url: event_update_welcome_page_setting_path(@event), html: {class: 'form-horizontal', style: 'margin-left: 40px;'} do |f|%>

  <div class="form-group">
  	<div class="col-md-12">
  		<label>1.上传logo(上传尺寸 120px 宽*100px高, jpg/png格式, 尺寸200kb)</label>
  	</div>
    <% if @event.welcome_page_logo.present? %>
      <div class="col-md-3 col-md-offset-2">
        <img src=<%=@event.welcome_page_logo.url%> width="100px">
      </div>
    <% end %>
  	<div class="col-md-8">
  		<%= f.file_field :welcome_page_logo, class: 'form-control' %>
  	</div>
  </div>

  <div class="form-group">
  	<div class="col-md-12">
  		<label>2, 上传欢迎界面第一页背景图(上传尺寸 748px 宽*1226px高, jpg/png格式, 尺寸500kb)</label>
  	</div>
    <% if @event.welcome_bg.present? %>
      <div class="col-md-3 col-md-offset-2">
        <img src=<%=@event.welcome_bg.url%> width="100px">
      </div>
    <% end %>
  	<div class="col-md-8">
  		<%= f.file_field :welcome_bg, class: 'form-control' %>
  	</div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <label>3, 上传欢迎界面第二页背景图(上传尺寸 748px 宽*1226px高, jpg/png格式, 尺寸500kb)</label>
    </div>
    <% if @event.welcome_second_bg.present? %>
      <div class="col-md-3 col-md-offset-2">
        <img src=<%=@event.welcome_second_bg.url%> width="100px">
      </div>
    <% end %>
    <div class="col-md-8">
      <%= f.file_field :welcome_second_bg, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12">
      <label>4, 上传登录界面背景图(上传尺寸 748px 宽*1226px高, jpg/png格式, 尺寸500kb)</label>
    </div>
    <% if @event.sessions_new_bg.present? %>
      <div class="col-md-3 col-md-offset-2">
        <img src=<%=@event.sessions_new_bg.url%> width="100px">
      </div>
    <% end %>
    <div class="col-md-8">
      <%= f.file_field :sessions_new_bg, class: 'form-control' %>
    </div>
  </div>

  <div class="checkbox">
  	<label>
  		<%= f.check_box :display_welcome_page %>是否开启欢迎页
  	</label>
  </div>

  <div class="checkbox">
  	<label>
  	  <%= f.check_box :text_inverse_color %>开启文字反白
  	</label>
  </div>

	<div class="row" style="margin-top:10px">
		<input class="btn btn-primary col-md-2" style="margin-right:10px" type="submit" value="确定"></input>
	</div>
<% end %>
