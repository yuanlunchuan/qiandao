<%= form_for @event, url: event_update_welcome_page_setting_path(@event), html: {class: 'form-horizontal', style: 'margin-left: 40px;'} do |f|%>

  <div class="form-group">
  	<div class="col-md-12">
  		<label>1.上传logo(上传尺寸 120px 宽*100px高, jpg/png格式, 尺寸200kb)</label>
  	</div>
  	<div class="col-md-8">
  		<%= f.file_field :welcome_page_logo, class: 'form-control' %>
  	</div>
  </div>

  <div class="form-group">
  	<div class="col-md-12">
  		<label>2, 上传背景图片(上传尺寸 640px 宽*1136px高, jpg/png格式, 尺寸500kb)</label>
  	</div>
  	<div class="col-md-8">
  		<%= f.file_field :welcome_bg, class: 'form-control' %>
  	</div>
  </div>

  <div class="checkbox">
  	<label>
  		<%= f.check_box :display_welcome_page %>是否开启欢迎页
  	</label>
  </div>

  <div class="checkbox">
  	<label>
  	  <%= f.check_box :text_inverse_color %>开启文字反白
  	</label>
  </div>

	<div class="row" style="margin-top:10px">
		<input class="btn btn-primary col-md-2" style="margin-right:10px" type="submit" value="确定"></input>
	</div>
<% end %>
