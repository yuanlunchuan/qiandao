<div class="row">
  <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">

          <div class="row">
            <div class="col-lg-12">
              <div class="m-b-md">
                <%= link_to '编辑', event_settings_path(current_event), class: 'btn btn-white btn-xs pull-right' %>
                <h2><%= current_event.name %></h2>
              </div>
            </div>
          </div>

          <div class="row">

            <div class="col-md-5">
              <%= current_event.desc %>
            </div>

            <div class="col-md-7">
              <ul class="list-unstyled event-items">
                <li><i class="fa fa-calendar"></i>
                  <%= current_event.start == current_event.end ? "#{current_event.start}" : "#{current_event.start} - #{current_event.end}" %>
                </li>
                <li><i class="fa fa-map-marker"></i><%= current_event.location %></li>
              </ul>
            </div>

          </div>

        </div>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>已报名人数</h5>
      </div>
      <div class="ibox-content">
        <h1 class="no-margins"><%=@total%></h1>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>已签到人数</h5>
      </div>
      <div class="ibox-content">
        <h1 class="no-margins"><%=@checked_in_numbers%></h1>
      </div>
    </div>
  </div>
</div>

