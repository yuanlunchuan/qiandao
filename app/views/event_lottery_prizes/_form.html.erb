<%= form_for @event_lottery_prize, url: (@event_lottery_prize.new_record? ? event_event_lottery_prizes_path(current_event) : event_event_lottery_prize_path(current_event, @event_lottery_prize)), html: { class: "form-horizontal"} do |f|%>
  <div class="form-group">
    <label class="control-label col-md-2">抽奖活动名称</label>
    <div class="col-md-8">
      <%= f.text_field :name, placeholder:  "抽奖活动名称", class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2">备注</label>
    <div class="col-md-8">
      <%= f.text_area :comment, placeholder: '抽奖活动备注', class: "form-control", rows: 5 %>
    </div>
  </div>
  <div class="row">
    <a href="<%= event_event_lottery_prizes_path(current_event) %>" class="btn btn-white col-md-offset-2 col-md-1">取消</a>
    <button class="btn btn-primary col-md-offset-1 col-md-1" type="submit">确定</button>
  </div>
<% end %>
